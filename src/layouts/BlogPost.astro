---
import SiteHeader from "../components/SiteHeader.astro";
import Page from "../components/Page.astro";

const { content } = Astro.props;
const { description, pubDate, heroImage, alt } = content;

const postTitle = content.title;
const title = postTitle + " | Justin Rowntree's Blog";
---

<Page {title} {description}>
    <SiteHeader />

    {
        heroImage && (
            <div>
                <img class="w-full" loading="eager" src={heroImage} alt={alt} />
            </div>
        )
    }

    <div class="flex justify-center text-zinc-700">
        <div class="text-lg w-5/6 prose">
            <h1 class="text-2xl font-semibold mt-8">{postTitle}</h1>
            <p class="font-extralight mb-8">{pubDate}</p>

            <div>
                <p class="text-lg my-6">
                    {description}
                </p>
            </div>
            <div class="prose text-lg">
                <slot />
            </div>
        </div>
    </div>
</Page>
